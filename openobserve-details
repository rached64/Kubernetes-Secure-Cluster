receivers:
  filelog:
    #include: [/tmp/file.log]
    include: [ /var/log/containers/*.log ]
    start_at: beginning
    operators:
      - type: json_parser
        parse_from: body
processors: {}

exporters:
  debug:
    verbosity: detailed

  otlphttp/openobserve:
    endpoint: http://192.168.122.184:5080/api/default
    headers:
      #Authorization: Basic ${env:OPEN_OBSERVE_KEY}
      Authorization: Basic cmFjaGVkY2hlcmlmNjRAZ21haWwuY29tOldlUE51WXVBSU9rU1J6OVo=
      stream-name: default

service:
  extensions: []
  pipelines:
    logs:
      receivers: [filelog]
      processors: []
      exporters: [otlphttp/openobserve]

openobserve ==> falco

sudo nano /etc/falcosidekick/config.yaml
sudo systemctl daemon-reload
sudo systemctl restart falcosidekick
sudo systemctl restart falco falcosidekick
curl -X POST http://localhost:2801/test2
curl -X POST http://localhost:2801/test
sudo systemctl status falco falcosidekick



openobserve ==> trivy

curl -X POST "http://192.168.122.184:5080/api/default/trivy_reports/_json" \
  -H "Authorization: Basic cmFjaGVkY2hlcmlmNjRAZ21haWwuY29tOldlUE51WXVBSU9rU1J6OVo=" \
  -H "Content-Type: application/json" \
  --data-binary "@trivy-report-cluster.json"
  
  
 for ns in $(sudo kubectl get namespaces -o name | cut -d/ -f2); do   sudo trivy k8s --report summary     --include-namespaces "$ns"     --output "trivy-report-$ns.json"     $(sudo kubectl config current-context); done


